---
import SiteLayout from "../layouts/SiteLayout.astro";
import ProjectCard from "../components/ProjectCard";
---
<SiteLayout title='Akash NP | Home'>
	<div class="intro | flex">
		<div class="hero">
			<h1 class="text-3xl font-bold mb-3">Akash NP</h1>
			<p>Quality driven Full Stack developer who enjoys learning and building OSS solutions.</p>
		</div>
	</div>
	<div class="projects | mx-auto mb-10 py-8">
		<h2 class="text-xl mb-5">Projects</h2>
		<div class="cards | flex flex-wrap justify-center gap-2">
			<ProjectCard
				projectTitle='miniERP'
				projectDescription='open source ERP application to simplify common departmental tasks.'
				projectStack='Django, django-rest-framework'
			/>
			<ProjectCard
				projectTitle='miniERP-Nextjs'
				projectDescription='React Frontend for miniERP built with Next.js, consuming DRF REST APIs'
				projectStack='Next.js, django-rest-framework'
			/>
			<ProjectCard
				projectTitle='Student Manager'
				projectDescription='simple open source Student Management application.'
				projectStack='Next.js, NextAuth, Prisma'
			/>
			<ProjectCard
				projectTitle='Find My Polo'
				projectDescription='hobby project to analyse the used VW Polo market'
				projectStack='FastAPI, React, MongoDB'
			/>
			<ProjectCard
				projectTitle='Next-Libgen'
				projectDescription='A modern UI for Library Genesis (libgen.is)'
				projectStack='Next.js, Prisma'
			/>
			<ProjectCard
				projectTitle='OLX Web Scraper'
				projectDescription='Script that can scrape through OLX listings and export to csv.'
				projectStack='Selenium'
			/>												
		</div>
	</div>
</SiteLayout>
