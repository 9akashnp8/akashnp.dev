---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header";
const { title } = Astro.props;
---
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-VYTGK4GDJ0"></script>
		<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-VYTGK4GDJ0');
		</script>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <ViewTransitions />
		<link rel="stylesheet" href="/style.css">
		<script>
			const handleOnMouseMove = (e) => {
				const { currentTarget: target } = e;
			
				const rect = target.getBoundingClientRect(),
					x = e.clientX - rect.left,
					y = e.clientY - rect.top;
				
				target.style.setProperty("--mouse-x", `${x}px`);
				target.style.setProperty("--mouse-y", `${y}px`);
			}
			
			const cards = document.getElementsByClassName("card");
			for ( const card of cards) {
				card.onmousemove = e => handleOnMouseMove(e);
			}
		</script>
	</head>
	<body>
		<main class="flex px-8 bg-white dark:bg-neutral-900 text-black dark:text-white">
            <div class="mx-auto w-full md:w-3/5 min-h-screen">
                <Header client:load />
				<slot/>
            </div>
        </main>
    </body>
</html>